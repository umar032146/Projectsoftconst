<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccent">
        <Button
            android:id="@+id/openmenuad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/baseline_menu_24"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/covermenuad"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/greenlogo"
            android:background="@color/white"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/set"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/actor"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/settings"
            android:text="Settings"
            android:background="@android:color/transparent"
            android:textColor="@color/darkgray"/>


        <Button
            android:id="@+id/users"
            android:layout_width="250dp"
            android:fontFamily="@font/actor"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/users"
            android:text="Users"
            android:background="@android:color/transparent"
            android:textColor="@color/darkgray"/>
        <Button
            android:id="@+id/roles"
            android:layout_width="250dp"
            android:fontFamily="@font/actor"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/roles"
            android:text="Roles"
            android:background="@android:color/transparent"
            android:textColor="@color/darkgray"/>
        <Button
            android:id="@+id/helpadmin"
            android:layout_width="250dp"
            android:fontFamily="@font/actor"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/help"
            android:text="Help Center"
            android:background="@android:color/transparent"
            android:textColor="@color/darkgray"/>
        <Button
            android:id="@+id/messages"
            android:layout_width="250dp"
            android:fontFamily="@font/actor"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/messages"
            android:text="Messages"
            android:background="@android:color/transparent"
            android:textColor="@color/darkgray"/>


    </LinearLayout>


    <ImageView
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:src="@drawable/greenlogo"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/transport"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_directions_car_filled"
            android:padding="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/hotel"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/airline"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_airplanemode_active_24"
            android:padding="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/attract"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_attractions_24"
            android:padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/restaurant"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_fastfood_24"
            android:padding="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/out"
            android:background="@drawable/logoround"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:padding="20dp"/>
    </LinearLayout>






</LinearLayout>
